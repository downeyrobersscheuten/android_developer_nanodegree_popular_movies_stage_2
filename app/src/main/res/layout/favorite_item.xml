<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_favorite_title"
        android:text="title"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="22sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/tv_favorite_date"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_favorite_date"
        android:text="date"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:paddingEnd="50dp"
        app:layout_constraintStart_toEndOf="@id/tv_favorite_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_favorite_date" />

</android.support.constraint.ConstraintLayout>